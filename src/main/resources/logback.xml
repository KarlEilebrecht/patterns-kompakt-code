<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </encoder>
    </appender>


    <logger name="de.calamanari.pk.abstractfactory" level="INFO"/>
    <logger name="de.calamanari.pk.activeobject" level="INFO"/>
    <logger name="de.calamanari.pk.adapter" level="INFO"/>
    <logger name="de.calamanari.pk.bridge" level="INFO"/>
    <logger name="de.calamanari.pk.builder" level="INFO"/>
    <logger name="de.calamanari.pk.coarsegrainedlock" level="INFO"/>
    <logger name="de.calamanari.pk.combinedmethod" level="INFO"/>
    
    
    
    <logger name="de.calamanari.pk.datatransferobject" level="INFO"/>
    
    
    <logger name="de.calamanari.pk.gateway" level="INFO"/>

    <logger name="de.calamanari.pk.templatemethod" level="INFO"/>


    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>