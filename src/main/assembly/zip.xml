<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>zip</id>
	<includeBaseDirectory>false</includeBaseDirectory>

	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src</directory>
			<excludes>
				<exclude>main/java/de/calamanari/other/**</exclude>
				<exclude>test/java/de/calamanari/other/**</exclude>
				<exclude>test/java/de/calamanari/**/*.md.backup</exclude>
			</excludes>
			<outputDirectory>/pk-examples-a6/src</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.basedir}/doc/eclipse-code-formatter.xml</source>
			<outputDirectory>/pk-examples-a6/doc</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/doc/eclipse-preferences.epf</source>
			<outputDirectory>/pk-examples-a6/doc</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/doc/liesmich.txt</source>
			<outputDirectory>/pk-examples-a6/doc</outputDirectory>
		</file>
		<file>
			<source>${project.basedir}/pom.xml</source>
			<outputDirectory>/pk-examples-a6</outputDirectory>
		</file>
	</files>
</assembly>